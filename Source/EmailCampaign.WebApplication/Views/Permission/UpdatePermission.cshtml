@model EmailCampaign.Domain.Entities.ViewModel.PermissionVM

@{
    Layout = "_Layout"; // render the page without layout
}


<!DOCTYPE html>
<html lang="en">
<head>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
</head>
<body class="hold-transition register-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Update Permission</h3>
                    </div>

                    <div class="card-body">
                        <div class=" register-card-body">

                            <form asp-action="Update" asp-controller="Permission" method="post">
                                @Html.HiddenFor(m => m.Id)
                                <div class="input-group mb-3">
                                    <input asp-for="ActionName" type="text" class="form-control" placeholder="Action Name" required>
                                </div>
                                <div class="input-group mb-3">
                                    <input asp-for="ControllerName" type="text" class="form-control" placeholder="Controller Name" required>
                                </div>
                                <div class="input-group mb-3">
                                    <input asp-for="PageName" type="text" class="form-control" placeholder="Page Name" required>
                                </div>
                                <div class="input-group mb-3">
                                    <input asp-for="Slug" type="text" class="form-control" placeholder="Slug" required>
                                </div>
                                <div class="row">
                                    <button type="submit" class="btn btn-primary btn-block">submit</button>
                                </div>
                            </form>
                        </div>
                        <!-- /.form-box -->
                    </div><!-- /.card -->
                </div>
            </div>
        </div>
    </div>
    <!-- /.register-box -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>
</body>
</html>
