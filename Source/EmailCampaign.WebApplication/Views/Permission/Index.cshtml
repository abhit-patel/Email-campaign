@model List<EmailCampaign.Domain.Entities.Permission>
@inject Microsoft.AspNetCore.Authorization.IAuthorizationService AuthorizationService


@{
    ViewData["Title"] = "Permission List";
    Layout = "_Layout"; // render the page without layout
}

<!DOCTYPE html>
<html lang="en">

<head>
   
    <style>
        .action-buttons {
            display: flex;
            gap: 5px;
        }

            .action-buttons form {
                margin: 0;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="card card-secondary">
                            <div class="card-header">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h2 class="mb-0">Permission List</h2>
                                    <div class="card-tools">
                                        <div class="d-flex">
                                        @if ((await AuthorizationService.AuthorizeAsync(User, "", "AddEditPermission")).Succeeded)
                                        {         
                                            <a asp-controller="Permission" asp-action="AddPermission" class="btn btn-dark m-2">
                                                <i class="fas fa-plus"></i> Add New Permission
                                            </a>
                                        }
                                        <div class="d-flex form-group mb-0 d-flex align-items-center">
                                        <input type="search" id="searchInput" class="form-control" placeholder="Search here">
                                            <button id="searchButton" class="btn btn-default btn-outline-secondary">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-body px-0 pt-0 pb-2">
                                @if (Model != null && Model.Any())
                                {
                                    <div class="table-responsive">
                                        <table id="searchTable" class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Index</th>
                                                    <th>ActionName</th>
                                                    <th>ControllerName</th>
                                                    <th>PageName</th>
                                                    <th>Slug</th>
                                                    @if ((await AuthorizationService.AuthorizeAsync(User, "", "AddEditPermission")).Succeeded)
                                                    {
                                                        <th>
                                                            Actions
                                                        </th>
                                                    }
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int i = 1;
                                                }
                                                @foreach (var permission in Model)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@permission.ActionName</td>
                                                        <td>@permission.ControllerName</td>
                                                        <td>@permission.PageName</td>
                                                        <td>@permission.Slug</td>
                                                        @if ((await AuthorizationService.AuthorizeAsync(User, "", "AddEditPermission")).Succeeded)
                                                        {
                                                            <td>
                                                                <div class="action-buttons">
                                                                    <a asp-controller="Permission" asp-action="GetPermissionById" asp-route-id="@permission.Id" class="btn btn-primary btn-sm">
                                                                        <i class="fas fa-edit fa-sm"></i>
                                                                    </a>
                                                                    @if ((await AuthorizationService.AuthorizeAsync(User, "", "DeletePermission")).Succeeded)
                                                                    {
                                                                    
                                                                            <form asp-controller="Permission" asp-action="Delete" asp-route-id="@permission.Id" method="post" class="DeleteForm")" >
                                                                                <button type="submit" class="btn btn-danger btn-sm deleteButton">
                                                                                    <i class="fas fa-trash-alt fa-sm"></i>
                                                                                </button>
                                                                            </form>
                                                                    }
                                                                </div>
                                                            </td>
                                                        }
                                                    </tr>
                                                    i++;
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    
    <script>
    $(document).ready(function () {
        $('#searchTable').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>

</body>

</html>