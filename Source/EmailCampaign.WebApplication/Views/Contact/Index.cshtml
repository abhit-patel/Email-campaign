@model List<EmailCampaign.Domain.Entities.Contact>

@{
    Layout = "_Layout"; // render the page without layout
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <style>
        .action-buttons {
            display: flex;
            gap: 5px;
        }

            .action-buttons form {
                margin: 0;
            }
    </style>
</head>
<body>

    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 col">
                        <div class="card card-primary">
                            <div class="card-header">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h2 class="mb-0">Contact List</h2>
                                    <a asp-controller="Contact" asp-action="AddContact" class="btn btn-success btn-sm">
                                        <i class="fas fa-plus fa-sm"></i> Add New Contact
                                    </a>
                                </div>
                            </div>

                            <div class="card-body px-0 pt-0 pb-2">
                                @if (Model != null && Model.Any())
                                {
                                    <div class="tabel-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>FirstName</th>
                                                    <th>LastName</th>
                                                    <th>Email</th>
                                                    <th>Company Name</th>
                                                    <th>IsActive</th>
                                                    <th>
                                                        Actions
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int i = 1;
                                                }
                                                @foreach (var contact in Model)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@contact.FirstName</td>
                                                        <td>@contact.LastName</td>
                                                        <td>@contact.Email</td>
                                                        <td>@contact.CompanyName</td>
                                                        <td>
                                                            <form asp-action="IsActiveToggle" asp-controller="Contact" method="post" class="d-inline">
                                                                @Html.HiddenFor(m => contact.Id)
                                                                <button type="submit" class="btn btn-sm @(contact.IsActive ? "btn-success" : "btn-danger")">
                                                                    @(contact.IsActive ? "Active" : "Inactive")
                                                                </button>
                                                            </form>
                                                        </td>
                                                        <td>
                                                            <div class="action-buttons">
                                                                <a asp-controller="Contact" asp-action="GetContactById" asp-route-id="@contact.Id" class="btn btn-primary btn-sm">
                                                                    <i class="fas fa-edit fa-sm"></i>
                                                                </a>
                                                                <form asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id" method="post">
                                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                                        <i class="fas fa-trash-alt fa-sm"></i>
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    i++;
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- /.register-box -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>
</body>

</html>