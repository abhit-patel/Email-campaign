                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Notification" class="nav-link">
                                <i class="nav-icon fas fa-bell	"></i>
                                <p>
                                    Notification
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                        </li>




                        <hr style="height:2px;border-width:0;color:white;background-color:white">

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-user-alt"></i>
                                <p>
                                    Manger User
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>

                            <ul class="nav nav-treeview">
                                @{
                                    HttpContextAccessor.HttpContext.GetRouteData().Values["controller"] = "User";
                                }
                                @if ((await AuthorizationService.AuthorizeAsync(User, "", "ViewPermission")).Succeeded)
                                {
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="User" class="nav-link">
                                            <i class="fa fa-circle nav-icon"></i>
                                            <p>User List</p>
                                        </a>
                                    </li>
                                }
                                @{
                                    HttpContextAccessor.HttpContext.GetRouteData().Values["controller"] = "User";
                                }
                                @if ((await AuthorizationService.AuthorizeAsync(User, "", "AddEditPermission")).Succeeded)
                                {
                                    <li class="nav-item">
                                        <a asp-action="AddUser" asp-controller="User" class="nav-link">
                                            <i class="fa fa-circle nav-icon"></i>
                                            <p>Add User</p>
                                        </a>
                                    </li>
                                }
                                @{
                                    HttpContextAccessor.HttpContext.GetRouteData().Values["controller"] = "Role";
                                }
                                @if ((await AuthorizationService.AuthorizeAsync(User, "", "ViewPermission")).Succeeded)
                                {
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="Role" class="nav-link">
                                            <i class="fa fa-circle nav-icon"></i>
                                            <p>Role List</p>
                                        </a>
                                    </li>
                                }
                                @{
                                    HttpContextAccessor.HttpContext.GetRouteData().Values["controller"] = "Role";
                                }
                                @if ((await AuthorizationService.AuthorizeAsync(User, "", "AddEditPermission")).Succeeded)
                                {
                                    <li class="nav-item">
                                        <a asp-action="AddRolePermission" asp-controller="Role" class="nav-link">
                                            <i class="fa fa-circle nav-icon"></i>
                                            <p>Manage Role-Permission</p>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>

                        
                        @{
                            HttpContextAccessor.HttpContext.GetRouteData().Values["controller"] = "Permission";
                        }
                        @if ((await AuthorizationService.AuthorizeAsync(User, "", "ViewPermission")).Succeeded)
                        {
                            <li class="nav-item ">
                                <a asp-action="Index" asp-controller="Permission" class="nav-link">
                                    <i class=" nav-icon fas fa-lock"></i>
                                    <p>Manage Permission</p>
                                </a>
                            </li>
                        }

                        @{
                            HttpContextAccessor.HttpContext.GetRouteData().Values["controller"] = "RolePermission";
                        }
                        @if ((await AuthorizationService.AuthorizeAsync(User, "", "ViewPermission")).Succeeded)
                        {
                            <li class="nav-item ">
                                <a asp-action="Index" asp-controller="RolePermission" class="nav-link">
                                    <i class="nav-icon fas fa-user-lock"></i>
                                    <p>Manage RolePermission</p>
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon far fa-folder-open"></i>
                                <p>
                                    Logs
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="ActivityLog" asp-controller="Log" class="nav-link">
                                        <i class="fa fa-circle nav-icon"></i>
                                        <p>Activity Log</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-action="ErrorLog" asp-controller="Log" class="nav-link">
                                        <i class="fa fa-circle nav-icon"></i>
                                        <p>Error Log</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </nav>
                <div id="toaster" class="toaster"></div>

                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
            </div>
            <!-- /.content-header -->
            <section>
                <div class="container-fluid">
                    <main role="main" class="content">
                        <div class="container-fluid">
                            @RenderBody()
                        </div>
                    </main>
                </div>
            </section>
        </div>


        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>&copy; 2024 - EmailCampaign.WebApplication</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 0.0.1
            </div>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
