    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->
    <link rel="stylesheet" href="plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->
    <link rel="stylesheet" href="plugins/summernote/summernote-bs4.min.css">
    <link rel="stylesheet" href="~/css/toaster.css" />

    

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" crossorigin="anonymous" />

    <style>
        .navbar-profile-pic {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            object-fit: cover;
        }

        .dropdown-item {
            max-width: 300px; /* Adjust the width as needed */
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

            .dropdown-item .float-right {
                display: flex;
                align-items: center;
            }

            .dropdown-item i {
                margin-right: 5px;
            }
    </style>

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-action="Index" asp-controller="Home" class="nav-link">Home</a>
                </li>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">

                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-bell"></i>
                        <span class="badge badge-warning navbar-badge">@((count ?? 0))</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <span class="dropdown-item dropdown-header">@((count ?? 0) + " Notifications")</span>
                        <div class="dropdown-divider"></div>
                        @if (notifications != null )
                        {
                            @foreach (var notification in notifications)
                            {
                                <a asp-action="UpdateNotification" asp-controller="Notification" asp-route-id="@notification.Id" class="dropdown-item">
                                    <i class="fas fa-envelope mr-2"></i> @notification.Header
                                    <span class="float-right">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                </a>
                                <div class="dropdown-divider"></div>
                            }
                        }
                        else
                        {
                            <span class="dropdown-item">No notifications available</span>
                        }
                        <div class="dropdown-divider"></div>
                        <a asp-action="Index" asp-controller="Notification" class="dropdown-item dropdown-footer">See All Notifications</a>
                    </div>
                </li>


                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>

                <li class="nav-item dropdown pe-3" >

                    
                        
                    @if (User.Identity.IsAuthenticated)
                    {

                        var profilePicturePath = HttpContextAccessor.HttpContext.Session.GetString("ProfilePicturePath");

                        <a class="nav-link " style="padding: 0.2rem .5rem; " data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="image">
                                <img src="@Url.Content(profilePicturePath.ToString())" class="img-circle navbar-profile-pic" alt="User Image">
                        </i>
                    </a>
                    }
                    <!-- End Profile Image Icon -->

                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <div class="dropdown-divider"></div>
                        <a asp-action="ViewProfile" asp-controller="User" class="dropdown-item">
                            <i class="fas fa-circle"></i> My Profile
                        </a>
                        <div class="dropdown-divider"></div>
                        <a asp-action="SelectProfile" asp-controller="User" class="dropdown-item">
                            <i class="fas fa-circle"></i> Change Profile
                        </a>
                        <div class="dropdown-divider"></div>
                        <a asp-action="ChangePassword" asp-controller="User" class="dropdown-item">
                            <i class="fas fa-circle"></i> Change Password
                        </a>
                        <div class="dropdown-divider"></div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Account" asp-action="UserLogout" class="dropdown-item">
                                <i class="fas fa-sign-out-alt nav-icon"></i>Logout
                            </a>
                        }
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>
                    </div>
                </li><!-- End Profile Nav -->


            </ul>

        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-action="Index" asp-controller="Home" class="brand-link">
                @* <img alt="Email campaign Logo" class="brand-image img-circle elevation-3" style="opacity: .8"> *@
                <span class="brand-text font-weight-light">GD Email campaign</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

