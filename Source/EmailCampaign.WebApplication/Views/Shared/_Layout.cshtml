                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-house-user"></i>
                                <p>
                                    Dashboard
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Charts
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon far fa-envelope"></i>
                                <p>
                                    Campaign
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                        </li>


                        @* Contact DropDown *@
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-address-card"></i>
                                <p>
                                    Contact
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            @{
                                HttpContextAccessor.HttpContext.GetRouteData().Values["controller"] = "Contact";
                            }
                            <ul class="nav nav-treeview">
                                @if ((await AuthorizationService.AuthorizeAsync(User, "", "ViewPermission")).Succeeded)
                                {
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="Contact" class="nav-link">
                                            <i class="fa fa-circle nav-icon"></i>
                                            <p>Manage Contact</p>
                                        </a>
                                    </li>
                                }
                                @if ((await AuthorizationService.AuthorizeAsync(User, "", "AddEditPermission")).Succeeded)
                                {
                                    <li class="nav-item">
                                        <a asp-action="AddContact" asp-controller="Contact" class="nav-link">
                                            <i class="fa fa-circle nav-icon"></i>
                                            <p>Add Contact</p>
                                        </a>
                                    </li>
                                }

                                <li class="nav-item">
                                        <a asp-action="Index" asp-controller="Group" class="nav-link">
                                            <i class="fa fa-circle nav-icon"></i>
                                            <p>Manage group</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="AddGroup" asp-controller="Group" class="nav-link">
                                            <i class="fa fa-circle nav-icon"></i>
                                            <p>Create group</p>
                                        </a>
                                    </li>
                            </ul>
                        </li>

                        @* Templates Dropdown *@
                        <li class="nav-item">
                            <a href="#" class="nav-link">
