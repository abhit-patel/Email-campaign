@using EmailCampaign.Query.QueryService
@using Microsoft.AspNetCore.Http
@using EmailCampaign.Domain.Entities
@inject Microsoft.AspNetCore.Authorization.IAuthorizationService AuthorizationService
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


@{
    var notifications = HttpContextAccessor.HttpContext.Items["Notifications"] as List<Notification>;
    var count = HttpContextAccessor.HttpContext.Items["Count"];
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmailCampaign.WebApplication</title>

    <!-- Google Font: Source Sans Pro -->
